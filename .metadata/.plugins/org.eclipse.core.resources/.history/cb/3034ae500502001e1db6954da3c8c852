#here we write configration
#database specific congfigration
#to coonect with mysql database
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
#
spring.datasource.url=jdbc:mysql://localhost:3306/custdata?createDatabaseIfNotExist=true
spring.datasource.username=root
spring.datasource.password=root




#jpa configration
#it helps to update the data to database
spring.jpa.hibernate.ddl-auto=update 
#to show the sql query in console we write this one
spring.jpa.show-sql=true
#to make  sure sql query match with my sql query
spring.jpa.properties.hibernate.dailect=org.hibernate.dailect.Mysql8Dialect
#get in properformate
spring.jpa.properties.hibernate.format_sql=true



#server configration
server.port=8090
